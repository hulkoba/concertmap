{
  // I want to use babel-eslint for parsing
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/all",
    "plugin:react-native/all"
  ],
  "rules": {
    "strict": 0,
    "quotes": [
      2,
      "single"
    ],
    "eol-last": [
      0
    ],
    "no-mixed-requires": [
      0
    ],
    "no-underscore-dangle": [
      0
    ]
  }
}