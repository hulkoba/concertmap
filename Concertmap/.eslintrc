{
  // I want to use babel-eslint for parsing
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
	"plugins": [
		"react",
		"react-native"
	],
  "ecmaFeatures": {
    "jsx": true
  },
	"extends": [

	  "plugin:react-native/all"
  ],
  "rules": {
  	strict: 0,
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0]
  }
}